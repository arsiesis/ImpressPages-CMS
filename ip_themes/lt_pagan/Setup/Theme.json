{
    "title": "LT Pagan",
    "version": "2.00",
    "doctype": "HTML5", /* HTML5, XHTML1_STRICT, XHTML1_TRANSITIONAL, XHTML1_FRAMESET, HTML4_STRICT, HTML4_TRANSITIONAL, HTML4_FRAMESET  */
    "thumbnail": "Thumbnail.png",
    "author": "ImpressPages",
    "widget": { /* Image cropping settings for widgets. Require theme reinstall to take affect. */
        "image": {
            "width": 540,
            "height": 342,
            "bigWidth": 800, /* Lightbox */
            "bigHeight": 600 /* Lightbox */
        },
        "imageGallery": {
            "width": 160,
            "height": 100,
            "bigWidth": 800, /* Lightbox */
            "bigHeight": 600 /* Lightbox */
        },
        "logoGallery": {
            "width": 160,
            "height": 160
        },
        "textImage": {
            "width": 220,
            "height": 600,
            "bigWidth": 800, /* Lightbox */
            "bigHeight": 600 /* Lightbox */
        }
    },
    "options": [
        {
            "label": "Style",
            "name": "style",
            "type": "select",
            "values": ["Dark", "Light", "Red"],
            "default": "Dark"
        },
        {
            "label": "Background Color",
            "name": "backgroundColor",
            "type": "color",
            "default": "#234567"
        },
        {
            "label": "Text Color",
            "name": "textColor",
            "type": "color",
            "default": "#234567"
        },
        {
            "label": "Width",
            "name": "width",
            "type": "range",
            "default": ""
        },
        {
            "label": "Backround",
            "name": "backround",
            "type": "file",
            "default": ""
        }
    ]

}